<% provide(:title, "Home") %>
<% provide(:body_class, "landing-page") %>

<div class="wrapper">
  <div class="header header-filter" style="background-image: url('https://images.unsplash.com/photo-1423655156442-ccc11daa4e99?crop=entropy&dpr=2&fit=crop&fm=jpg&h=750&ixjsv=2.1.0&ixlib=rb-0.3.5&q=50&w=1450');">
    <div class="container">

      <div class="row">
        <div class="col-md-6">
          <h1 class="title">CryptoTracker</h1>
          <h4>Every landing page needs a small description after the big bold title, that's why we added this text here. Add here all the information that can make you or your product create the first impression.</h4>
          <br />
          <a href="#" class="btn btn-danger btn-raised btn-lg">
            <i class="fa fa-play"></i> Signup
          </a>
        </div> <!-- /col-md-6 -->
      </div> <!-- /row -->

    </div> <!-- /container -->
  </div> <!-- /header -->

  <div class="main main-raised">
    <div class="container">
      <div class="section text-center section-landing">

        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <h2 class="title">Crypto list</h2>
            <h5 class="description">Here are the last prices</h5>
          </div>
        </div>
        <hr>

        <% @cryptos_list.each do |crypto| %>

          <div class="row crypto-data">
            <div class="col-md-4">
              <h2 class="title"><%= crypto["name"] %></h2>
              <h3><%= crypto["symbol"] %></h3>
            </div>
            <div class="col-md-4">
              <h3><%= crypto["price_usd"] %> $</h3>
            </div>
            <div class="col-md-4">

              <!-- Refactorization needed -->
              <p>
                24 h :
                <% if crypto["percent_change_24h"].to_f >= 0 %>
                  <span class="trending-up">
                    + <%= crypto["percent_change_24h"] %> %
                    <i class="material-icons">trending_up</i>
                  </span>
                <% else %>
                  <span class="trending-down">
                    <%= crypto["percent_change_24h"] %> %
                    <i class="material-icons">trending_down</i>
                  </span>
                <% end %>
              </p>

              <p>
                7 d :
                <% if crypto["percent_change_7d"].to_f >= 0 %>
                  <span class="trending-up">
                    + <%= crypto["percent_change_7d"] %> %
                    <i class="material-icons">trending_up</i>
                  </span>
                <% else %>
                  <span class="trending-down">
                    <%= crypto["percent_change_7d"] %> %
                    <i class="material-icons">trending_down</i>
                  </span>
                <% end %>
              </p>

            </div>
          </div> <!-- /row -->
          <hr>

        <% end %>

      </div> <!-- /section -->
    </div> <!-- /container -->
  </div> <!-- /main -->

</div> <!-- /wrapper -->
